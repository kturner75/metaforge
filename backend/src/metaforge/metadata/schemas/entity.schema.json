{
  "$schema": "https://json-schema.org/draft/2020-12",
  "$id": "https://metaforge.dev/schemas/entity.schema.json",
  "title": "MetaForge Entity",
  "description": "Schema for metadata/entities/*.yaml files",
  "$ref": "#/$defs/entityFile",
  "$defs": {
    "entityFile": {
      "type": "object",
      "required": ["entity", "fields"],
      "additionalProperties": false,
      "properties": {
        "entity": {
          "type": "string",
          "minLength": 1,
          "description": "PascalCase entity name (e.g. Contact, Company)"
        },
        "displayName": { "type": "string" },
        "pluralName": { "type": "string" },
        "abbreviation": {
          "type": "string",
          "minLength": 2,
          "maxLength": 5,
          "pattern": "^[A-Z][A-Z0-9a-z]+$"
        },
        "labelField": { "type": "string" },
        "scope": {
          "type": "string",
          "enum": ["tenant", "global"]
        },
        "includes": {
          "type": "array",
          "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/includesDef" }
        },
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/fieldDef" }
        },
        "validators": {
          "type": "array",
          "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/validatorDef" }
        },
        "defaults": {
          "type": "array",
          "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/defaultsDef" }
        },
        "hooks": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "beforeSave": {
              "type": "array",
              "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/hookDefinition" }
            },
            "afterSave": {
              "type": "array",
              "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/hookDefinition" }
            },
            "afterCommit": {
              "type": "array",
              "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/hookDefinition" }
            },
            "beforeDelete": {
              "type": "array",
              "items": { "$ref": "https://metaforge.dev/schemas/_defs.schema.json#/$defs/hookDefinition" }
            }
          }
        }
      }
    }
  }
}
